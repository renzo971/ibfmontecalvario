---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  text: string;
  BackImage: ImageMetadata;
}
const { BackImage, text } = Astro.props;
---

<div class="relative group w-auto h-auto items-center">
  <!-- Imagen usando la etiqueta <Image> de Astro -->
  <Image src={BackImage} alt="Comida" class="w-auto h-auto object-cover" />

  <!-- Texto oculto que aparece al hacer hover -->
  <div
    class="absolute inset-0 flex items-center justify-center bg-black bg-opacity-50 text-white opacity-0 group-hover:opacity-100 transition-opacity duration-300"
  >
    <p class="text-lg font-bold">{text}</p>
  </div>
</div>
