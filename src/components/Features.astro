---
import jovenes from "../images/ministerios/jovenes.png";
import rondalla from "../images/ministerios/rondalla.png";
import instituto from "../images/ministerios/instituto.png";
import kids from "../images/ministerios/kids.png";
import pharus from "../images/ministerios/pharus.png";
import sembradoras from "../images/ministerios/sembradores.png";
import femenil from "../images/ministerios/femenil.jpg";
import ImageFlip from "./ImageFlip.astro";
const features = [
  {
    title: "Jovenes Monte Calvario",
    img: jovenes,
  },
  {
    title: "Rondalla Bautista Monte Calvario",
    img: rondalla,
  },
  {
    title: "Rondalla Bautista Femenil Monte Calvario",
    img: femenil,
  },

  {
    title: "Instituto Bautista",
    img: instituto,
  },
  {
    title: "Ministerio evangelistico Pharus",
    img: pharus,
  },
  {
    title: "Monte Calvario Kids",
    img: kids,
  },
  {
    title: "Sembradoras MC",
    img: sembradoras,
  },
];
---

<section class="py-24 bg-gradient-to-b from-mc2 via-mc3 to-mc1">
  <div class="max-w-6xl my-0 mx-auto text-center">
    <h2
      class="mt-2 text-4xl font-extrabold tracking-tight text-white sm:text-5xl"
    >
      Nuestros Ministerios
    </h2>
    <p class="text-xl my-12 text-gray-200">
      Descubre todos los ministerios de nuestra iglesia
    </p>
    <div class="feature-grid items-center px-7">
      {
        features.map((feature) => (
          <div class="hover:-translate-y-2 duration-500 bg-white rounded-lg shadow">
            <ImageFlip BackImage={feature.img} text={feature.title} />
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .feature-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }
</style>
