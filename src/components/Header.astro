---
import { Image } from "astro:assets";
import logopuro from "../images/logopuro.png";
import logoname from "../images/logoname.png";const currentPath = Astro.url.pathname;
const pages = [
  { url: "/", title: "Inicio" },
  { url: "/nosotros", title: "Nosotros" },
  { url: "/servicios", title: "Servicios" },
  { url: "/eventos", title: "Eventos" },
  { url: "/camino-al-cielo", title: "El Camino al Cielo" },
  { url: "/contacto", title: "Contacto" },
];

---

<header>
  <nav class="bg-white border-gray-200 dark:bg-[#023060]">
    <div
      class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4"
    >
      <a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
        <!-- Ajusta el tamaño del logo aquí -->
        <Image
          src={logopuro}
          width={100}
          height={50}
          alt="Iglesia Logo"
          client:load
        />
        <Image
          src={logoname}
          height={50}
          width={300}
          alt="Iglesia name"
          client:load
        />
      </a>
      <button
        data-collapse-toggle="navbar-default"
        type="button"
        class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-white rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-white dark:hover:bg-gray-700 dark:focus:ring-gray-600"
        aria-controls="navbar-default"
        aria-expanded="false"
      >
        <span class="sr-only">abrir menu</span>
        <svg
          class="w-5 h-5"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 17 14"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M1 1h15M1 7h15M1 13h15"></path>
        </svg>
      </button>
      <div class="hidden w-full md:block md:w-auto" id="navbar-default">
        <ul
          class="font-medium flex flex-col p-4 md:p-0 mt-4 border border-gray-100 rounded-lg bg-gray-50 md:flex-row md:space-x-8 rtl:space-x-reverse md:mt-0 md:border-0 md:bg-white dark:bg-[#023060] md:dark:bg-[#023060] dark:border-gray-700"
        >
          {
            pages.map((page) => (
              <li>
                <a
                  href={page.url}
                  class={
                    currentPath === page.url
                    ? "block py-2 px-3  rounded  md:p-0 text-mc3"
                      : "block py-2 px-3 text-white rounded hover:text-mc3 md:border-0  md:p-0   hover:bg-transparent"
                  }
                  aria-current={currentPath === page.url ? "page" : undefined}
                >
                  {page.title}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </nav>
</header>

<script>
  // Detectar cuando el botón de menú es clickeado para abrir/cerrar el menú
  const menuToggle = document.querySelector("[data-collapse-toggle]");
  const navbar = document.getElementById("navbar-default");

  if (menuToggle) {
    menuToggle.addEventListener("click", () => {
      const expanded = menuToggle.getAttribute("aria-expanded") === "true";
      menuToggle.setAttribute("aria-expanded", (!expanded).toString());
      navbar.classList.toggle("hidden");
    });
  }
</script>
